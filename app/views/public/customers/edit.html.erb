<% if @customer.errors.any? %>
  <div id="error_explanation">
    <h2><%= @customer.errors.count %> error prohibited this obj from being saved:</h2>
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>会員情報編集</h2>

      <%= form_with model: @customer, url: customers_path(@customer.id), method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :氏名 %>
          <%= f.text_field :last_name, autofocus: true, id:"last_name", placeholder:"名前"%>
          <%= f.text_field :first_name, autofocus: true, id:"first_name", placeholder:"名前"%>
        </div>
        
        <div class="form-group">
          <%= f.label :フリガナ %>
          <%= f.text_field :last_name_kana, autofocus: true, id:"last_name_kana", placeholder:"名前"%>
          <%= f.text_field :first_name_kana, autofocus: true, id:"first_name_kana", placeholder:"名前"%>
        </div>
        
        <div class="form-group">
          <%= f.label :郵便番号 %>
          <%= f.text_field :postal_code, autofocus: true, id:"customer_postal_code" %>
        </div>
        
        <div class="form-group">
          <%= f.label :住所 %><br>
          <%= f.text_field :address, autofocus: true, id:"customer_address" %>
        </div>
        
        <div class="form-group">
          <%= f.label :電話番号 %><br>
          <%= f.text_field :telephone_number, autofocus: true, id:"customer_telephone_number" %>
        </div>
        
        <div class="form-group">
          <%= f.label :メールアドレス%><br>
          <%= f.email_field :email, autofocus: true, id:"customer_email" %>
        </div>
        
        <div class="form-group">
          <%= f.submit '編集内容を保存', class:'btn btn-secondary' %>
        </div>
        <div class="text-center font-bold text-red-500">
          <%= link_to "退会する", unsubscribe_path, method: :get, class: "btn btn-sm btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>