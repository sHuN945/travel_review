<div class="container">
  <div class="row">
    <div class="mx-3">
      <section class="inner">
        <h2 class="section-ttl">ログイン</h2>
        <% if flash[:danger] %>
          <p class="text-red"><%= flash[:danger] %></p>
        <% end %>
      
        <%= form_with model: @customer, url: session_path(resource_name), local: true do |f| %>
        
        <h4>会員の方はこちらからログイン</h4>
        
        <div class="field mb-2">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      
        <div class="field mb-2">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
      
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
        
        <div class="my-5">
          <h3>会員登録がお済みでない方</h3>
          <p>
            <%= link_to  "こちら", new_customer_registration_path, class: "underline" %>から新規登録を行なってください。
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
