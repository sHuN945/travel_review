<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <% if @range == "Customer" %>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.last_name %><%= customer.first_name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.post_place %></td>
          <td><%= post.introduction %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>