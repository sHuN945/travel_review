<div class="col-md-8 offset-md-1">
  <table class="table table-hobver table-inverse">
    <thead>
      <tr>
        <th>コメント日時</th>
        <th>コメント内容</th>
        <th></th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @comments.each do |comment| %>
        <tr>
          <td>
            <%= link_to post_path(post) do %>
              <%= comment.created_at %>
            <% end %>
          </td>
          <td><%= comment.content %></td>
        </tr>
      <% end %>
  
    </tbody>
</div>