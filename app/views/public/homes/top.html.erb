<h1>新規投稿</h1>
<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |massage| %>
      <li><%= massage %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post, url: '/posts', method: :post do |f| %>
  <h4>投稿場所</h4>
  <%= f.text_field :post_place %>

  <h4>本文</h4>
  <%= f.text_area :introduction %>

  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>

  <%= f.submit '投稿' %>
<% end %>
