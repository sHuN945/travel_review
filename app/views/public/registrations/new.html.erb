<div class="container">
  <div class="row">
    <div class="mx-3">
      <p class="h3 py-4">新規会員登録</p>

      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        
        <div class="field">
          <%= f.label :名前 %>
          <em>(姓)</em>
          <%= f.text_field :last_name, autofocus: true %>
          <em>(名)</em>
          <%= f.text_field :first_name, autofocus: true %>
        </div>
        
        <div class="field">
          <%= f.label :フリガナ %>
          <em>(セイ)</em>
          <%= f.text_field :last_name_kana, autofocus: true %>
          <em>(メイ)</em>
          <%= f.text_field :first_name_kana, autofocus: true %>
        </div>
        
        <div class="field">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        
        <div class="field">
          <%= f.label :郵便番号 %>
          <em>(ハイフンなし)</em>
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </div>
        
        <div class="field">
          <%= f.label :住所 %>
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>
        
        <div class="field">
          <%= f.label :電話番号 %>
          <em>(ハイフンなし)</em>
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
        </div>
        
        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
        
        <div class="field">
          <%= f.label :パスワード %>
          <em>(確認用)</em>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
        
        <div class="actions">
          <input type="submit" name="commit" value="新規登録" class="btn btn-sm btn-success" data-disable-with="Sign up">
        </div>
      <% end %>
        
      <p class="h4 pt-4">すでに登録済みの方</p>
      <p class="h5">
        <%= link_to customer_session_path do %>
          こちら
        <% end %>
      　からログインを行ってください。
      </p>
    </div>
  </div>
</div>