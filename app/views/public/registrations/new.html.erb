<div class="container">
  <div class="row">
    <div class="mx-3">
      <section class="inner">
        <h2 class="section-ttl">新規会員登録</h2>
      
            <%= form_with model: @customer, url: customer_registration_path do |f| %>
              <%= render "public/shared/error_messages", resource: resource %>
              <table class="customer_info customer_form">
                <thead>
                <th></th>
                <th></th>
                <th></th>
              </thead>
              <tbody>
                <tr>
                  <td>名前</td>
                  <td><%= f.label :last_name, "(姓)", class: "customer_name" %> <%= f.text_field :last_name, autofocus: true %></td>
                  <td><%= f.label :first_name, "(名)", class: "customer_name" %> <%= f.text_field :first_name %></td>
                </tr>
                <tr>
                  <td>フリガナ</td>
                  <td><%= f.label :last_name_kana, "(セイ)" %> <%= f.text_field :last_name_kana %></td>
                  <td><%= f.label :first_name_kana, "(メイ)" %> <%= f.text_field :first_name_kana %></td>
                </tr>
                <tr>
                  <td><%= f.label :email, "メールアドレス" %></td>
                  <td colspan="2"><%= f.email_field :email, autocomplete: "email" %></td>
                </tr>
                <tr>
                  <td><%= f.label :postal_code, "郵便番号(ハイフンなし7桁)" %></td>
                  <td colspan="2"><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
                </tr>
                <tr>
                  <td><%= f.label :address, "住所" %></td>
                  <td colspan="2"><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
                </tr>
                <tr>
                  <td><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></td>
                  <td colspan="2"><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
                </tr>
                <tr>
                  <td><%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %></td>
                  <td colspan="2"><%= f.password_field :password, autocomplete: "off" %></td>
                </tr>
                <tr>
                  <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
                  <td colspan="2"><%= f.password_field :password_confirmation, autocomplete: "off" %></td>
                </tr>
                <tr>
                  <td></td>
                  <td colspan="2"><%= f.submit "新規登録", class: "btn btn-success" %></td>
                </tr>
              </tbody>
            </table>
          <% end %>
              
          <h2 class="section-ttl py-3">すでに登録済みの方</h2>
          <p>
            <%= link_to "こちら", customer_session_path, class: "underline" %>からログインを行ってください。
          </p>
      </section>
    </div>
  </div>
</div>