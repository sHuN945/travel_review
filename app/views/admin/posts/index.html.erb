<div class="col-md-8 offset-md-1">
  <h2>投稿一覧</h2>
  <table class="table table-hobver table-inverse">
    <thead>
      <tr>
        <th>投稿日時</th>
        <th>投稿者</th>
        <th>投稿場所</th>
        <th>投稿内容</th>
        <th colspan="4"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.created_at %></td>
          <td><%= post.customer.full_name %></td>
          <td><%= post.post_place %></td>
          <td><%= post.introduction %></td>
          <td><%= link_to '削除する',admin_post_path(post.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @posts %>
</div>